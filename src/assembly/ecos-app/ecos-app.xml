<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">

    <id>${project.build.finalName}</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <files>
        <file>
            <source>../src/assembly/ecos-app/meta.json</source>
            <filtered>true</filtered>
        </file>
    </files>

    <fileSets>
        <fileSet>
            <includes>
                <include>**/*.bpmn20.xml</include>
                <include>**/*.bpmn</include>
                <include>**/*-module.json</include>
            </includes>
            <directory>target/classes/alfresco/module/${project.artifactId}/workflow</directory>
            <outputDirectory>modules/workflow</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/classes/alfresco/module/${project.artifactId}/dashboard</directory>
            <outputDirectory>modules/dashboard</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/classes/alfresco/module/${project.artifactId}/ecos-forms</directory>
            <outputDirectory>modules/form</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/classes/alfresco/module/${project.artifactId}/ecos-types</directory>
            <outputDirectory>modules/type</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>target/classes/alfresco/module/${project.artifactId}/ecos-sections</directory>
            <outputDirectory>modules/section</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>

</assembly>
