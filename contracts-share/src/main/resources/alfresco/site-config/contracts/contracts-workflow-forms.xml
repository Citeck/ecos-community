<alfresco-config>

    <config evaluator="task-type" condition="ctrwf:selectSignerTask">
        <forms>
            <form id="inline">
                <field-visibility>
                    <show id="bpm:description" />
                </field-visibility>
                <appearance>
                    <field id="bpm:description">
                        <control template="/org/alfresco/components/form/controls/info.ftl" />
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="task-type" condition="ctrwf:archiveTask">
        <forms>
