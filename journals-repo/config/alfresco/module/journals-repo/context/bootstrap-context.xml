<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="journals.import-spaces" abstract="true" class="org.alfresco.repo.module.ImporterModuleComponent" parent="module.baseComponent">
        <property name="moduleId" value="journals-repo" />
        <property name="importer" ref="spacesBootstrap"/>
    </bean>

    <!-- models -->
    <bean id="journals.dictionaryBootstrap" parent="dictionaryModelBootstrap"
        depends-on="dictionaryBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/journals-repo/model/journalsModel.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco/module/journals-repo/messages/journal</value>
            </list>
        </property>
    </bean>

    <bean id="journals.module-component.idocs-root" parent="journals.import-spaces">
        <property name="name" value="idocs-root" />
        <property name="description" value="Root for idocs system objects" />
        <property name="sinceVersion" value="1.0" />
        <property name="appliesFromVersion" value="1.0" />
        <property name="bootstrapView">
            <props>
                <prop key="uuidBinding">UPDATE_EXISTING</prop>
                <prop key="path">/</prop>
                <prop key="location">alfresco/module/journals-repo/bootstrap/explicit/idocs-root.xml</prop>
                <prop key="encoding">UTF-8</prop>
            </props>
        </property>
    </bean>

</beans>
