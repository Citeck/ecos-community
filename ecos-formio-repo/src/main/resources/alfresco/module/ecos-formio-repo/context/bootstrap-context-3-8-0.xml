<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ecos.formio.import-spaces.3-8-0" abstract="true" parent="ecos.formio.import-spaces">
        <property name="sinceVersion" value="3.8.0" />
        <property name="appliesFromVersion" value="3.8.0" />
    </bean>

    <bean id="ecos.formio.formio-forms-folder" parent="ecos.formio.import-spaces.3-8-0">
        <property name="name" value="formio-forms-folder" />
        <property name="description" value="formio-forms-folder" />
        <property name="bootstrapView">
            <props>
                <prop key="path">/${spaces.company_home.childname}/${spaces.dictionary.childname}</prop>
                <prop key="location">alfresco/templates/bootstrap/ru/citeck/common/folder.xml</prop>
                <prop key="messages">alfresco/module/ecos-formio-repo/bootstrap/formio-forms-folder</prop>
                <prop key="encoding">UTF-8</prop>
            </props>
        </property>
    </bean>

    <bean id="ecos.formio.module-component.forms-journal" parent="ecos.formio.import-spaces.3-8-0" depends-on="idocs.dictionaryBootstrap">
        <property name="name" value="ecos.formio.module-component.forms-journal" />
        <property name="description" value="ecos.formio.module-component.forms-journal" />
        <property name="dependsOn">
            <list>
                <ref bean="idocs.module-component.journals-meta-root" />
                <ref bean="idocs.module-component.system-journals-list" />
            </list>
        </property>
        <property name="bootstrapViews">
            <list>
                <props>
                    <prop key="path">/cm:IDocsRoot/journal:journalMetaRoot/cm:journals</prop>
                    <prop key="location">alfresco/templates/bootstrap/ru/citeck/journals/journal.xml</prop>
                    <prop key="messages">alfresco/module/ecos-formio-repo/bootstrap/journals/formio-journal</prop>
                    <prop key="encoding">UTF-8</prop>
                </props>
                <props>
                    <prop key="path">/cm:IDocsRoot/journal:journalMetaRoot/cm:journals/cm:formio-forms</prop>
                    <prop key="location">alfresco/templates/bootstrap/ru/citeck/journals/criterion.xml</prop>
                    <prop key="messages">alfresco/module/ecos-formio-repo/bootstrap/journals/formio-journal</prop>
                    <prop key="encoding">UTF-8</prop>
                </props>
                <props>
                    <prop key="path">/cm:IDocsRoot/journal:journalMetaRoot/cm:journalLists</prop>
                    <prop key="location">alfresco/module/idocs-repo/bootstrap/journals/system/journal-in-list.xml</prop>
                    <prop key="messages">alfresco/module/ecos-formio-repo/bootstrap/journals/formio-journal</prop>
                    <prop key="encoding">UTF-8</prop>
                </props>
            </list>
        </property>
    </bean>

    <bean id="ecos.formio.module-component.forms-journal.create-variant3" parent="ecos.formio.import-spaces.3-8-0" depends-on="idocs.dictionaryBootstrap">
        <property name="name" value="ecos.formio.module-component.forms-journal.create-variant" />
        <property name="description" value="ecos.formio.module-component.forms-journal.create-variant" />
        <property name="dependsOn">
            <list>
                <ref bean="ecos.formio.module-component.forms-journal" />
            </list>
        </property>
        <property name="bootstrapViews">
            <list>
                <props>
                    <prop key="path">/cm:IDocsRoot/journal:journalMetaRoot/cm:journals/cm:formio-forms</prop>
                    <prop key="location">alfresco/templates/bootstrap/ru/citeck/journals/create-record-variant.xml</prop>
                    <prop key="messages">alfresco/module/ecos-formio-repo/bootstrap/journals/formio-journal</prop>
                    <prop key="encoding">UTF-8</prop>
                </props>
            </list>
        </property>
    </bean>

</beans>
