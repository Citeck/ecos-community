<alfresco-config>

    <config evaluator="node-type" condition="delegate:absenceEvent">
        <forms>
            <form>
                <edit-form template="/ru/citeck/components/form/delegate/absence-event-form.ftl"/>
                <view-form template="/ru/citeck/components/form/delegate/absence-event-form.ftl"/>
            </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="delegate:absenceEvent">
        <forms>
            <form>
                <create-form template="/ru/citeck/components/form/delegate/absence-event-form.ftl"/>
            </form>
            <!-- Search form -->
            <form id="filters">
                <field-visibility>
                    <show id="delegate:startAbsence"/>
                    <show id="delegate:endAbsence"/>
                    <show id="delegate:absenceReason"/>
                    <show id="delegate:comment"/>
                </field-visibility>
            </form>
        </forms>
    </config>

</alfresco-config>
