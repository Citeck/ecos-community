					<field id="cardlet:allowedType">
						<control template="/ru/citeck/components/form/controls/dictionary/class.ftl" />
					</field>
					<field id="cardlet:allowedAuthorities">
						<control template="/ru/citeck/components/form/controls/orgstruct-select.ftl">
