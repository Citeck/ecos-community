	<config evaluator="string-compare" condition="flowable$flowable-simple-payment">
		<forms>
			<form>
				<create-form template="/ru/citeck/components/form/workflow/simple-payment/simple-payment.ftl" />
			</form>
		</forms>
	</config>
	
    <config evaluator="task-type" condition="wfsp:paymentStartTask">
        <forms>
            <form>
				<view-form template="/ru/citeck/components/form/workflow/simple-payment/simple-payment.ftl" />
            </form>
			<form id="workflow-details">
				<view-form template="/ru/citeck/components/form/workflow/common/workflow-details.ftl" />
			</form>
        </forms>
    </config>

	<config evaluator="task-type" condition="wfsp:paymentTask">
		<forms>
			<form>
				<field-visibility>
					<show id="message" />
					<show id="taskOwner" />
					<show id="bpm:priority" />
					<show id="bpm:dueDate" />
					<show id="cwf:sender" force="true"/>
					<show id="bpm:status" />
                    <show id="packageItems"/>
                    <show id="cwf:assignDate" force="true"/>
					<show id="cwf:lastcomment" force="true"/>
					<show id="bpm:comment" />
					<show id="wfsp:extendDate" />
					<show id="wfsp:paymentOutcome" />
				</field-visibility>
				<appearance>
					<set id="" appearance="title" label-id="workflow.set.task.info" />
					<set id="info" appearance="" template="/org/alfresco/components/form/3-column-set.ftl" />
					<set id="progress" appearance="title" label-id="workflow.set.task.progress" />
					<set id="items" appearance="title" label-id="workflow.set.items" />
					<set id="response" appearance="title" label-id="workflow.set.response" />

					<field id="message">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>
					<field id="taskOwner" set="info" />
					<field id="cwf:sender" set="info">
						<control template="/ru/citeck/components/form/controls/username.ftl" />
					</field>
					<field id="bpm:priority" set="info" read-only="true">
						<control template="/org/alfresco/components/form/controls/workflow/priority.ftl" />
					</field>
                    <field id="cwf:assignDate" set="response">
                        <control template="/org/alfresco/components/form/controls/info.ftl" />
                    </field>
					<field id="bpm:dueDate" set="info" label-id="workflow.field.due">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>
					<field id="bpm:status" set="progress" />
					<field id="packageItems" set="items">
						<control>
							<control-param name="doclibView">confirm</control-param>
						</control>
					</field>
					<field id="cwf:lastcomment" set="response">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>
					<field id="wfsp:extendDate" set="response"/>
					
					<field id="bpm:comment" label-id="workflow.field.comment" set="response">
						<control template="/org/alfresco/components/form/controls/textarea.ftl" />
					</field>
					<field id="wfsp:paymentOutcome" label-id="workflow.field.outcome" set="response">
						<control template="/org/alfresco/components/form/controls/workflow/activiti-transitions.ftl" />
					</field>
				</appearance>
			</form>
			<form id="inline">
				<edit-form template="/ru/citeck/components/form/workflow/simple-payment/payment-task-inline.ftl" />
				<view-form template="/ru/citeck/components/form/workflow/simple-payment/payment-task-inline.ftl" />
			</form>
		</forms>
	</config>

</alfresco-config>
