<alfresco-config>

    <config>
        <forms>
            <dependencies>
                <js src="/modules/simple-dialog.js" />

                <js src="/lib/grouped-datatable.js" />

                <css src="/citeck/components/orgstruct/orgstruct-icons.css" />
                <css src="/citeck/components/dynamic-tree/dynamic-doclib-table.css" />
                <css src="/citeck/components/dynamic-tree/dynamic-table.css" />
                <js src="/yui/resize/resize.js" />

                <css src="/citeck/components/journals2/journals.css" />

                <css src="/citeck/components/form/citeck-object-finder.css" />
                <js src="/citeck/components/form/citeck-object-finder.js" />
                <js src="/citeck/components/form/controls/number-richsearch.js" />
                <js src="/citeck/components/form/controls/text-richsearch.js" />
                <js src="/citeck/components/form/controls/boolean-richsearch.js" />
                <js src="/citeck/components/form/controls/select-richsearch.js" />
                <js src="/citeck/components/form/controls/number-field.js" />
                <js src="/citeck/components/form/controls/js-variable-value.js" />
                <js src="/citeck/components/form/controls/groupable.js" />
                <css src="/citeck/components/form/controls/groupable.css" />
                <js src="/citeck/components/form/controls/auto-manual.js" />
                <css src="/citeck/components/form/controls/auto-manual.css" />
                <js src="/citeck/components/form/multipart-form-support.js" />
                <js src="/citeck/components/form/selectWithEdit.js" />
                <js src="/citeck/components/form/constraints.js" />
                <js src="/components/form/date-range.js" />
                <js src="/citeck/components/form/select.js" />
                <css src="/citeck/components/form/select.css" />
                <css src="/citeck/components/form/setselect.css" />
                <css src="/citeck/components/form/controls/passports.css" />
                <css src="/citeck/components/form/controls/img-preview.css" />
            </dependencies>
        </forms>
    </config>

    <!-- Overdue tasks link menu -->
    <config evaluator="string-compare" condition="SitePages">
        <pages>
            <page id="journals">journals2/list/main</page>
        </pages>
    </config>

    <!-- Special pages -->
    <config evaluator="string-compare" condition="UriTemplate">
        <uri-templates>
            <uri-template id="journals">/{pageid}/list/{listId}</uri-template>
            <uri-template id="sitejournals" before="sitepage">/site/{site}/{pageid}/list/{listId}</uri-template>
        </uri-templates>
    </config>

    <config evaluator="string-compare" condition="UrlTemplate">
        <link>create-content?itemId={type}&amp;destination={destination}&amp;viewId={formId}</link>
    </config>

    <config evaluator="string-compare" condition="Journals">
        <page-max-items>
            <default>10</default>
            <options>10,30,50,100</options>
        </page-max-items>
    </config>

</alfresco-config>
