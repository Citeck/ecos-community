<?xml version="1.0" encoding="UTF-8"?>
<journals xmlns="http://www.citeck.ru/ecos/journals/1.0">

	<imports>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
		<import uri="http://www.citeck.ru/model/content/idocs/1.0"
			prefix="idocs" />
		<import uri="http://www.citeck.ru/model/attorneys/common/1.0"
			prefix="att" />
		<import uri="http://www.citeck.ru/model/attorneys/dl/1.0"
			prefix="attdl" />
	</imports>

	<journal id="attorneys-forms">
		<option name="type">att:attorneyForm</option>
		<option name="doubleClickId">nodeRef</option>
		<option name="doubleClickLink">card-details?nodeRef={id}</option>
		<headers>
			<header key="att:status" default="true">
				<option name="formatter">colorChange({'Новая': 'new',
					'На согласовании':'on-agreement',
					'На доработке':'on-rework','Согласовано': 'agreed',
					'Отказано':'cancelled','Неактуально': 'irrelevant',
					'На подписании':'on-signing','Подписано ГД': 'signed',
					'Передано инициатору':'to-initiator',
					'Отправлено в филиал':'to-branch',
					'Утверждена':'approved'})
				</option>
			</header>
			<header key="att:number" default="true" />
			<header key="idocs:registrationNumber" default="true" />
			<header key="att:privilege" default="true" />
			<header key="att:initiator" default="true" />
			<header key="att:implementer" default="true" />
			<header key="att:startDate" />
			<header key="att:endDate" />
			<header key="att:cancellationDate" />
			<header key="att:attorney" default="true" />
			<header key="att:principal" />
			<header key="att:organization" />
		</headers>
	</journal>

	<journal id="privileges">
		<option name="type">attdl:privilege</option>
		<option name="doubleClickId">nodeRef</option>
		<option name="doubleClickLink">card-details?nodeRef={id}</option>
		<headers>
			<header key="attdl:privilegeShortName" default="true" />
			<header key="attdl:privilegeName" default="true" />
			<header key="attdl:optionalConfirm" default="true" />
		</headers>
	</journal>

	<journal id="attorneys">
		<option name="type">attdl:attorneys</option>
		<option name="allowCreate">true</option>
		<option name="index">1</option>
		<headers>
			<header key="attdl:isDraft" default="true" />
			<header key="attdl:registryIndividualNumber" default="true" />
			<header key="attdl:attorneyPerson" default="true" />
		</headers>
	</journal>
</journals>