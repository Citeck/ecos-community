<?xml version="1.0" encoding="UTF-8"?>

<!--Deprecated. Added only for backward compatibility-->
<model name="sswf:workflowmodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<namespaces>
		<namespace uri="http://www.citeck.ru/model/workflow/simple-statement/1.0" prefix="sswf" />
	</namespaces>

	<types>

        <type name="sswf:startTask">
            <parent>bpm:startTask</parent>
            <associations>
                <!-- performers -->
                <association name="sswf:performers">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <association name="sswf:checking">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
            <overrides>
                <!--<property name="bpm:sendEMailNotifications">-->
                    <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>cm:taggable</aspect>
                <aspect>bpm:assignee</aspect>
            </mandatory-aspects>
        </type>


        <type name="sswf:readFinalComment">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:readFinalCommentResponse">
                    <type>d:text</type>
                    <constraints>
                        <constraint name="sswf:readFinalCommentResponseOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <!--ознакомлен-->
                                    <value>Familiar</value>
                                    <!--ответить-->
                                    <value>Reply</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}readFinalCommentResponse</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_readFinalCommentResponse == 'Reply'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>

        <type name="sswf:replyToFinalComment">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:replyToFinalCommentResponse">
                    <type>d:text</type>
                    <constraints>
                        <constraint name="sswf:replyToFinalCommentResponseOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <!--завершить-->
                                    <value>Complete</value>
                                    <!--ответить-->
                                    <value>Reply</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}replyToFinalCommentResponse</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_replyToFinalCommentResponse == 'Reply'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>

		<type name="sswf:replyToComment">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:replyToCommentResponse">
                    <type>d:text</type>
                    <constraints>
                        <constraint name="sswf:replyToCommentResponseOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>CompleteTheTask</value>
                                    <value>Reply</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}replyToCommentResponse</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_replyToCommentResponse == 'Reply'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                    <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>


		<type name="sswf:performTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:performTaskResponse">
                    <type>d:text</type>
                    <constraints>
                        <constraint name="sswf:performTaskResponseOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>Perform</value>
                                    <value>SendComment</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}performTaskResponse</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_performTaskResponse == 'SendComment'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                    <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>

		<type name="sswf:verifyTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:verify">
                    <type>d:text</type>
                    <default>Reject</default>
                    <constraints>
                        <constraint name="sswf:verifyOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>Approve</value>
                                    <value>Reject</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}verify</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_verify != 'Approve'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                    <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>

		<type name="sswf:correctTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="sswf:correctTaskResponse">
                    <type>d:text</type>
                    <constraints>
                        <constraint name="sswf:correctTaskResponseOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>Correct</value>
                                    <value>SendComment</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </properties>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.citeck.ru/model/workflow/simple-statement/1.0}correctTaskResponse</default>
                </property>
				<property name="bpm:comment">
					<constraints>
						<constraint type="ru.citeck.ecos.constraints.common.MandatoryIfConstraint">
							<parameter name="condition"><value>prop_sswf_correctTaskResponse == 'SendComment'</value></parameter>
						</constraint>
					</constraints>
				</property>
                <property name="bpm:packageActionGroup">
                    <default>add_package_item_actions</default>
                </property>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <!--<property name="bpm:sendEMailNotifications">-->
                    <!--<default>true</default>-->
                <!--</property>-->
            </overrides>
            <mandatory-aspects>
                <aspect>sswf:workflowFormulation</aspect>
                <aspect>sswf:taskComment</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
        </type>

	</types>

    <aspects>
        <aspect name="sswf:workflowFormulation">
            <properties>
                <property name="sswf:title">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="sswf:formulation">
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
        <aspect name="sswf:taskComment">
            <properties>
                <property name="sswf:lastComment">
                    <type>d:text</type>
                </property>
                <property name="sswf:сomment">
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>