<?xml version='1.0' encoding='UTF-8'?>
<model name="pas:productsAndServicesModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Products and services</description>
    <version>1.0</version>

    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl" />
    </imports>

    <namespaces>
        <namespace uri="http://www.citeck.ru/model/products-and-services/1.0" prefix="pas" />
    </namespaces>

    <constraints>
        <constraint name="pas:constraint:allowedType" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>product</value>
                    <value>service</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="pas:unit">
            <title>Unit</title>
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="pas:unitShortName">
                    <type>d:text</type>
                </property>
                <property name="pas:unitName">
                    <type>d:text</type>
                </property>
            </properties>
        </type>

        <type name="pas:productOrService">
            <title>Product or service</title>
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="pas:pricePerUnit">
                    <type>d:double</type>
                </property>
                <property name="pas:type">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="pas:constraint:allowedType"/>
                    </constraints>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>pas:hasUnit</aspect>
            </mandatory-aspects>
        </type>

        <type name="pas:productOrServiceCopied">
            <title>Products and services copy for document</title>
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="pas:pricePerUnitCopied">
                    <type>d:double</type>
                </property>
                <property name="pas:typeCopied">
                    <type>d:text</type>
                    <constraints>
                        <constraint ref="pas:constraint:allowedType"/>
                    </constraints>
                </property>
                <property name="pas:quantity">
                    <type>d:double</type>
                </property>
                <property name="pas:total">
                    <type>d:double</type>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>pas:hasUnit</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="pas:hasUnit">
            <associations>
                <association name="pas:elementUnit">
                    <title>Unit</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>pas:unit</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>

        <aspect name="pas:hasProductOrService">
            <associations>
                <association name="pas:productOrService">
                    <title>Product/Service</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>pas:productOrServiceCopied</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>

    </aspects>

</model>
