<?xml version='1.0' encoding='UTF-8'?>

<model name="icaseTask:icaseTaskModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <description>Case management in iDocs. Task description</description>
    <author>Citeck</author>
    <version>1.0</version>

    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/datalist/1.0" prefix="dl"/>
        <import uri="http://www.citeck.ru/model/icaseRole/1.0" prefix="icaseRole"/>
        <import uri="http://www.citeck.ru/model/lifecycle/1.0" prefix="lc"/>
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.citeck.ru/model/activity/1.0" prefix="activ"/>
        <namespace uri="http://www.citeck.ru/model/icaseTask/1.0" prefix="icaseTask"/>
    </namespaces>

    <types>
        <type name="activ:activity">
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="activ:plannedStartDate">
                    <title>The planned start date</title>
                    <type>d:datetime</type>
                </property>
                <property name="activ:plannedEndDate">
                    <title>The planned end date</title>
                    <type>d:datetime</type>
                </property>
                <property name="activ:actualStartDate">
                    <title>The actual start date</title>
                    <type>d:datetime</type>
                    <protected>true</protected>
                </property>
                <property name="activ:actualEndDate">
                    <title>The actual end date</title>
                    <type>d:datetime</type>
                    <protected>true</protected>
                </property>
                <property name="activ:manualStarted">
                    <title>Manual started</title>
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                </property>
                <property name="activ:manualStopped">
                    <title>Manual stopped</title>
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>
        
        <type name="icaseTask:roleMapping">
            <parent>dl:dataListItem</parent>
            <properties>
                <property name="icaseTask:workflowVariableName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
            <associations>
                <association name="icaseTask:role">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>icaseRole:role</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
            <mandatory-aspects>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>

        <type name="icaseTask:task">
            <parent>activ:activity</parent>
            <properties>
                <property name="icaseTask:workflowDefinitionName">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="icaseTask:workflowInstanceId">
                    <type>d:text</type>
                </property>
                <property name="icaseTask:dueDate">
                    <type>d:datetime</type>
                </property>
                <property name="icaseTask:priority">
                    <type>d:int</type>
                    <default>2</default>
                    <constraints>
                        <constraint ref="bpm:allowedPriority"/>
                    </constraints>
                </property>
            </properties>
            <associations>
                <association name="icaseTask:performer">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>icaseRole:role</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <child-association name="icaseTask:taskRolesMapping">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>icaseTask:roleMapping</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>
            </associations>
            <overrides>
                <property name="activ:manualStarted">
                    <default>true</default>
                </property>
            </overrides>
            <mandatory-aspects>
                <aspect>lc:hasState</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="activ:hasActivities">
            <associations>
                <child-association name="activ:activities">
                    <source>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>activ:activity</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                    <propagateTimestamps>true</propagateTimestamps>
                </child-association>
            </associations>
        </aspect>
        <aspect name="icaseTask:hasTasks">
            <associations>
                <child-association name="icaseTask:tasks">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>icaseTask:task</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                    <propagateTimestamps>true</propagateTimestamps>
                </child-association>
            </associations>
        </aspect>
    </aspects>
</model>