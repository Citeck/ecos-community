<?xml version="1.0" encoding="UTF-8"?>
<views xmlns="http://www.citeck.ru/ecos/views/1.0">
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
        <import uri="http://www.citeck.ru/model/delegate/1.0" prefix="delegate" />
        <import uri="http://www.citeck.ru/model/orgstruct/1.0" prefix="org" />
    </imports>

    <view class="cm:person">
        <field prop="cm:userName">
            <invariant on="protected" language="explicit">true</invariant>
        </field>
        <field prop="cm:firstName" />
        <field prop="cm:lastName" />
        <field prop="cm:email">
            <invariant on="valid" language="javascript">
                /.+\@.+\..+/.test(value)
            </invariant>
        </field>
        <view class="delegate:availability">
            <field prop="delegate:available">
                <invariant on="mandatory" language="explicit">false</invariant>
            </field>
        </view>
        <!--<view class="org:preset">
            <field prop="org:preset">
                <region name="input" template="select"/>
            </field>
        </view>-->
    </view>
</views>