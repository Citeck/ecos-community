                    </property>
                    <property name="findString" value="_________" />
                    <property name="positionFindString" value="end" />
                    <property name="shiftRight" value="${args.shiftRight}" />
                    <property name="shiftUp" value="${args.shiftUp}" />
                </bean>
            </list>
        </property>
    </bean>

