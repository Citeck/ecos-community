<?xml version="1.0" encoding="UTF-8"?>
<view:view
        xmlns:view="http://www.alfresco.org/view/repository/1.0"
        xmlns:sys="http://www.alfresco.org/model/system/1.0"
        xmlns:cm="http://www.alfresco.org/model/content/1.0"
        xmlns:tk="http://www.citeck.ru/model/content/classification/tk/1.0">

    <cm:category>
        <view:properties>
            <sys:node-uuid>category-document-type</sys:node-uuid>
            <cm:name>${document.type.name}</cm:name>
            <cm:title>
                <view:mlvalue view:locale="en_US">${document.type.title_en}</view:mlvalue>
                <view:mlvalue view:locale="ru_RU">${document.type.title_ru}</view:mlvalue>
            </cm:title>
            <tk:appliedType>{http://www.citeck.ru/model/content/ecos/1.0}document</tk:appliedType>
            <tk:journalType>ecos-documents</tk:journalType>
        </view:properties>

        <cm:subcategories>

            <!-- HR Documents -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-hr-documents</sys:node-uuid>
                    <cm:name>${document.hr-documents.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.hr-documents.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.hr-documents.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>
            <!-- Incorporation  Documents -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-incorporation-documents</sys:node-uuid>
                    <cm:name>${document.incorporation-documents.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.incorporation-documents.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.incorporation-documents.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>
            <!-- Accounting  Documents -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-accounting-documents</sys:node-uuid>
                    <cm:name>${document.accounting-documents.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.accounting-documents.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.accounting-documents.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>
            <!-- Marketing Materials -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-marketing-materials</sys:node-uuid>
                    <cm:name>${document.marketing-materials.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.marketing-materials.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.marketing-materials.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>

            <!-- Commercial Offer -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-commercial-offer</sys:node-uuid>
                    <cm:name>${document.commercial-offer.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.commercial-offer.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.commercial-offer.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>

            <!-- Other Documents -->
            <cm:category>
                <view:properties>
                    <sys:node-uuid>cat-document-other</sys:node-uuid>
                    <cm:name>${document.other.name}</cm:name>
                    <cm:title>
                        <view:mlvalue view:locale="en_US">${document.other.title_en}</view:mlvalue>
                        <view:mlvalue view:locale="ru_RU">${document.other.title_ru}</view:mlvalue>
                    </cm:title>
                </view:properties>
            </cm:category>


        </cm:subcategories>

    </cm:category>

</view:view>
