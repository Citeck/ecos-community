                    <icon type="fa">fa-newspaper-o</icon>
                    <action type="PAGE_LINK">
                        <param name="pageId">journals2/list/meta</param>
                    </action>
                </item>
                <item id="HEADER_TEMPLATES">
                    <label>menu.item.templates</label>
                    <icon type="fa">fa-code</icon>
