                <item id="HEADER_SYSTEM_JOURNALS">
                    <label>menu.item.system-journals</label>
                    <icon type="fa">fa-cogs</icon>
                    <action type="PAGE_LINK">
                        <param name="pageId">journals2/list/system</param>
                    </action>
                </item>
                <item id="HEADER_META_JOURNALS">
