<?xml version='1.0' encoding='UTF-8'?>
<project xmlns:artifact="antlib:org.apache.maven.artifact.ant" name="idocs-share-dependent" default="package-dependencies">
    <import file="share-macros.xml"/>

	<property name="override.project.name" value="1st-override-share" />
	<property name="override.project.dir" value="${override.project.name}" />
	<property name="core.project.name" value="idocs-share" />
	<property name="core.project.version" value="2.12.1${module.release}" />
	<property name="core.project.dir" value="${core.project.name}" />
	
	<path id="project.classpath">
		<pathelement path="${override.project.dir}/build/lib/*" />
		<pathelement path="${core.project.dir}/build/lib/*" />
	</path>
	
	<target name="package-dependencies">
		<copy file="${dist.amps.dir}/${override.project.name}/${core.project.version}/${override.project.name}-${core.project.version}-${build.classifier}.amp"
		    tofile="${dist.deps.dir}/${override.project.name}/${core.project.version}/${override.project.name}-${core.project.version}-${build.classifier}.amp" />
		<copy file="${dist.amps.dir}/${core.project.name}/${core.project.version}/${core.project.name}-${core.project.version}-${build.classifier}.amp"
		    tofile="${dist.deps.dir}/${core.project.name}/${core.project.version}/${core.project.name}-${core.project.version}-${build.classifier}.amp" />
	</target>

	<target name="install-dependencies">
		<install-amp war-file="${test.webapp.path}"
			amp-file="${dist.amps.dir}/${override.project.name}/${core.project.version}/${override.project.name}-${core.project.version}-${build.classifier}.amp" />
		<install-amp war-file="${test.webapp.path}"
			amp-file="${dist.amps.dir}/${core.project.name}/${core.project.version}/${core.project.name}-${core.project.version}-${build.classifier}.amp" />
	</target>
	
</project>
