		<property name="className" value="contracts:supplementaryAgreement" />
		<property name="titleMLTemplate">
			<map>
				<entry key="ru_RU">
					<value><![CDATA[Доп.соглашение №#{'$'}{node.properties['contracts:agreementNumber']!'б-н'}]]></value>
