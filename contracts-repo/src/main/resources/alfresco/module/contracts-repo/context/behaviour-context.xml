				<entry key="lt_LT">
					<value><![CDATA[Sąskaita №#{'$'}{node.properties['payments:paymentNumber']!'n/a'} už<#if node.assocs['payments:beneficiary']?? && node.assocs['payments:beneficiary']?size &gt; 0> #{'$'}{node.assocs['payments:beneficiary'][0].name}</#if>]]></value>
				</entry>
			</map>
		</property>
