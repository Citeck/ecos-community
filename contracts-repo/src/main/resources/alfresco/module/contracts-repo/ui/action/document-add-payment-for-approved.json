{
  "id": "document-add-payment-for-approved",
  "key": "document-add-payment-for-approved",
  "name": {
    "ru": "Создать счет",
    "en": "Create invoice"
  },
  "type": "create",
  "icon": "icon-plus",
  "config": {
    "recordRef": "dict@payments:payment",
    "attributes": {
      "payments_basis": "$.id"
    }
  },
  "evaluator": {
    "type": "group",
    "config": {
      "joinBy": "AND",
      "evaluators": [
        {
          "type": "predicate",
          "inverse": true,
          "config": {
            "predicate": {
              "t": "in",
              "att": "idocs:documentStatus.cm:name",
              "val": [
                "canceled"
              ]
            }
          }
        },
        {
          "type": "group",
          "config": {
            "joinBy": "OR",
            "evaluators": [
              {
                "type": "predicate",
                "config": {
                  "predicate": {
                    "t": "in",
                    "att": "idocs:documentStatus.cm:name",
                    "val": [
                      "active"
                    ]
                  }
                }
              },
              {
                "type": "predicate",
                "config": {
                  "predicate": {
                    "t": "in",
                    "att": "icase:caseStatusAssoc.cm:name",
                    "val": [
                      "active"
                    ]
                  }
                }
              }
            ]
          }
        }
      ]
    }
  }
}
